#include<stdio.h>
int main()
{
    float bp,hra ,da,grpay;
    printf("enter basic salary of ramesh:");
    scanf("%f",&bp);
    da = 0.4*bp;
    hra = 0.2*bp;
    grpay = bp+da+hra;
    printf("basic salary of ramesh = %f\n",bp);
    printf("dearness allowence = %f\n",da);
    printf("house rent allowence = %f\n",hra);
    printf("gross salary = %f\n",grpay);
    return 0;
}

